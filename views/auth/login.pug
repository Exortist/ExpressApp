extends ../layouts/main

block header
    include ../partials/header
block content
    .auth
        .row: .col.s12
            ul.tabs
                li.tab.col.s6
                    a(class="active" href="#login") Войти
                li.tab.col.s6
                    a.active(href="#register") Регистрация

            #login.col.s6.offset-s3
                if loginError
                    p.alert!= loginError
                h1 Войти в магазин
                form(action="/auth/login" method='POST')
                    .input-field
                        input#email.validate(type="email" name='email' required)
                        label(for="email") Email
                        span.helper-text(data-error="Введите email" )
                    .input-field
                        input#password.validate(type="password" name='password' required)
                        label(for="password") Пароль
                        span.helper-text(data-error="Введите пароль" )
                    input(type="hidden" name="_csrf" value=csrf)
                    button.btn.btn-primary(type="submit") Войти
            #register.col.s6.offset-s3
                if registerError
                    p.alert!= registerError
                h1 Создать аккаунт
                form(action="/auth/register" method='POST')
                    .input-field
                        input#remail.validate(type="email" name='email' required)
                        label(for="remail") Email
                        span.helper-text(data-error="Введите название" )
                    .input-field
                        input#name.validate(type="text" name='name' required)
                        label(for="name") Ваше Имя
                        span.helper-text(data-error="Введите Имя" )
                    .input-field
                        input#rpassword.validate(type="password" name='password' required)
                        label(for="rpassword") Пароль
                        span.helper-text(data-error="Введите пароль" )
                    .input-field
                        input#confirm.validate(type="password" name='confirm' required)
                        label(for="confirm") Введите пароль ещё раз
                        span.helper-text(data-error="Введите пароль" )
                    input(type="hidden" name="_csrf" value=csrf)
                    button.btn.btn-primary(type="submit") Зарегистрироваться


block footer
    include ../partials/footer

