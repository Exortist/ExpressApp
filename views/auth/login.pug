extends ../layouts/main

block header
    include ../partials/header
block content
    .auth
        .row: .col.s12
            ul.tabs
                li.tab.col.s6
                    a(class="active" href="#login") Войти
                li.tab.col.s6
                    a.active(href="#register") Регистрация

            #login.col.s6.offset-s3
                h1 Войти в магазин
                form(action="/add" method='POST')
                    .input-field
                        input#email.validate(type="email" name='email' required)
                        label(for="email") Название курса
                        span.helper-text(data-error="Введите название" )
                    .input-field
                        input#password.validate(type="password" name='password' required)
                        label(for="password") Пароль
                        span.helper-text(data-error="Введите пароль" )
                    button.btn.btn-primary(type="submit") Войти
            #register.col.s6.offset-s3
                h1 Создать аккаунт
                form(action="/add" method='POST')
                    .input-field
                            input#remail.validate(type="email" name='email' required)
                            label(for="remail") Название курса
                            span.helper-text(data-error="Введите название" )
                    .input-field
                        input#rpassword.validate(type="password" name='rpassword' required)
                        label(for="rpassword") Пароль
                        span.helper-text(data-error="Введите пароль" )
                    .input-field
                        input#confirm.validate(type="password" name='confirm' required)
                        label(for="confirm") Введите пароль ещё раз
                        span.helper-text(data-error="Введите пароль" )
                    button.btn.btn-primary(type="submit") Зарегистрироваться


block footer
    include ../partials/footer

