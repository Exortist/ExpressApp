extends layouts/main

block header
    include partials/header
block content
    .container
        h1 Корзина
        #card
            if courses.length
                table
                    thead
                        tr
                            th Название
                            th Количество
                            th Действие
                    tbody
                        each course in courses
                            tr
                                td!=course.title
                                td!=course.count
                                td: button.btn.btn-small.js-remove(data-id=course.id) Удалить
                p #[strong Цена:] #[span.price #{price}]
                form(action="/orders" method="POST")
                    button.btn(type="submit") Сделать заказ
            else
                p Корзина пуста
block footer
    include partials/footer
